.friend-container {
  display: flex;
  justify-content: space-between;
  flex-grow: 1; /* 占据剩余所有空间 */
  


.user-list {
  width: 0 0 20% 0; // 左侧宽度

  .list-header {
  display: flex;
  align-items: center;
  padding: 10px;
}

.search-box {
  flex: 1; // 占据剩余空间
  display: flex;
  align-items: center;
}

.add-friend-icon {
  margin-left: 10px;
}

.list {
  margin-top: 10px;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #ddd;
  flex-direction: column; /* 垂直排列 */
}

.list-item-avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.list-item-info {
  flex: 1;
}


.confirm-search-button {
    flex-grow: 1; /* 让确认搜索按钮尽可能占满横向空间 */
    margin-top: auto; /* 将按钮推至底部 */
}
}




.display-box {
    flex: 1;
    background-color:#f0f0f0
}
}

